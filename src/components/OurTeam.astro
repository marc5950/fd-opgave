---
//@ts-nocheck
import employeesData from "@data/employees.json";
import DynamicIcon from "./helpers/DynamicIcon.astro";
---

<section class="container">
  <div class="title">
    <p>Our team</p><h2>We champion the bold to achieve the extraordinary</h2><p>
      Our success stems from the synergy between dedicated teams and our valued
      clients. We prioritize a company culture that fosters exceptional
      productivity, ensures customer satisfaction, and promotes mutual respect
      among all team members.
    </p>
  </div>
  <ul class="employees">
    {
      employeesData.slice(0, 3).map((employee) => (
        <li>
          <a href={employee.slug}>
            <img src={employee.img} alt={employee.name} />
            <p>{employee.title}</p>
          </a>
          <h3 style="--font-size: var(--heading05)">{employee.name}</h3>
          <p style="--text-color: var(--text-gray)">{employee.description}</p>
          <ul class="SoMe">
            {employee.social_links.map((link) => (
              <li>
                <a href={link.url}>
                  <DynamicIcon name={link.icon} />
                </a>
              </li>
            ))}
          </ul>
        </li>
      ))
    }
  </ul>
</section>

<style>
  .container {
    row-gap: 2rem;
  }
  .employees {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.25rem;
    text-align: center;

    > li {
      display: flex;
      flex-direction: column;
      gap: 1rem;

      h3 {
        margin-bottom: -1rem;
      }
    }
    a {
      display: grid;
      img {
        grid-area: 1 / 1;
        border-radius: 10px;
      }
      p {
        place-self: end end;
        grid-area: 1 / 1;
        padding: 0.25rem 1rem;
        margin: 1rem 0.25rem;
        border-radius: 30px;
        color: var(--text-light);
        background: var(--primary-color03);
        transition: all 0.3s ease;
      }
      &:hover {
        p {
          background: var(--primary-color01);
          color: var(--text-dark);
        }
      }
    }
    .SoMe {
      display: flex;
      justify-content: center;
      gap: 1.5rem;
    }
  }
</style>
