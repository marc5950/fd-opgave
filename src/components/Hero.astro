---
import { Image } from "astro:assets";
import Services from "./Services.astro";
import CEOImage from "@assets/images/ceo.png";
---

<section class="hero">
  <div class="hero-inner">
    <figure></figure>
    <div class="hero-content">
      <h1>Empowering Your Business Growth</h1>
      <p>
        Discover tailored strategies and expert insights to take your business
        to the next level. Let us help you navigate challenges and achieve
        sustainable success.
      </p>
      <a
        href="#0"
        class="button01"
        style="--button-color01: var(--text-light); --button-color02: var(--primary-color03);"
        >Book a Meeting</a
      >
    </div>
    <Image class="image" src={CEOImage} alt="CEO" />
  </div>
  <div class="services">
    <Services />
  </div>
</section>

<style>
  /* Styles her */
  @layer components {
    .hero {
      display: grid;
      grid-template-rows: repeat(6, 1fr);
      justify-items: center;
      padding-top: 70px;
      h1 {
        color: var(--text-light);
      }
      p {
        color: var(--text-light);
      }
      .hero-inner {
        background-color: var(--primary-color03);

        grid-column: 1 / 1;
        grid-row: 1 / 5;
        display: grid;
        gap: 2rem;
        grid-template-columns:
          1fr minmax(0, calc(600px - 1rem)) minmax(0, calc(600px - 1rem))
          1fr;
        .pattern {
          margin-top: 2rem;
          height: 50% !important;
        }
        .hero-content {
          z-index: 2;
          margin-top: 2rem;
          display: flex;
          flex-direction: column;
          gap: 29px;
        }
        .image {
          grid-column: 3 / 5;
          height: 100% !important;
        }
        @media (max-width: 900px) {
          grid-template-columns: 1fr minmax(0, 600px) 1fr;
          .image {
            grid-column: 1 / 4;
            grid-row: 2 / 3;
            length: 100% !important;
            height: auto !important;
          }
        }
      }
      .services {
        grid-column: 1 / 1;
        grid-row: 4 / 6;
        margin: 1rem 2rem;
      }
      @media (max-width: 900px) {
        grid-template-rows: 1fr 1fr;
        .services {
          grid-column: 1 / 1;
          grid-row: 2 / 3;
          margin: 1rem 2rem;
        }
        .hero-inner {
          grid-column: 1 / 1;
          grid-row: 1 / 2;
        }
      }
    }
    figure {
      position: relative;
      &::before {
        --square-count: 15;
        --square-size: 1.34rem;

        --_square-size: var(--square-size, 1rem);
        --_square-half: calc(var(--square-size) / 2);
        --_square-sum: calc(var(--square-count) * var(--square-size));
        z-index: 1;
        content: "";
        position: absolute;
        inset: auto 60px 234px auto;

        /*inline-size: calc(var(--square-count) * 1.34rem - .67rem);*/
        inline-size: calc(
          round(var(--_square-sum), var(--_square-size)) - var(--_square-half)
        );
        aspect-ratio: 1;
        background: linear-gradient(
            135deg,
            #be965d,
            #976f40,
            #c99b61,
            #f0be7b,
            #ffcb85,
            #eebc79,
            #c0935b,
            #976f40
          )
          0 0 / 100% 100%;
        mask:
          var(--square-pattern) 0 0 / var(--_square-size) var(--_square-size),
          var(--square-pattern) var(--_square-half) var(--_square-half) /
            var(--_square-size) var(--_square-size);
        /*clip-path: polygon(-3% 0%, 100% 0%, 100% 103%);*/
      }
    }
  }
</style>
